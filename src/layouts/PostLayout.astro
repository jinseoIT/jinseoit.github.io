---
import Main from "../layouts/MainLayout.astro";
import Markdown from "../components/Markdown.astro";

interface Props {
  title: string;
  image?: string;
}

const { title, image } = Astro.props;
---

<Main title={title}>
  <div class="article-wrapper">
    <div class="article">
      <Markdown title={title} image={image}>
        <slot />
      </Markdown>
    </div>
  </div>
</Main>

<style>
  .article {
    margin: 0px auto;
    max-width: 800px;
  }
</style>
